<div class="container mt-3">
  <h1 class="text-center">Flats</h1>

    <div class="row">

      <% @flats.each do |flat| %>
        <div class="col-md-4">
          <div class="flat-card">

            <div style="background-image: url('https://source.unsplash.com/random/500x200')" class="flat-card-image">
            </div>

            <div class="flat-card-content">
              <h3 class="fw-bold"><%= flat.name %></h3>
              <br>
              <%= flat.address %>
              <br>
              <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
              <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
            </div>

            <div class="flat-card-actions">
              <%= link_to "More info", flat_path(flat) %>
              <%= link_to "Edit",  edit_flat_path(flat), class: "ms-3 text-warning" %>
              <%= link_to "Remove", flat_path(flat),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "ms-3 text-danger" %>
            </div>

          </div>
        </div>
      <% end %>

    </div>

</div>
